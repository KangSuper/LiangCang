<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/magazine_bar_relative"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBlank"
        android:padding="5dp">

        <TextView
            android:id="@+id/magazine_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlue3"/>


        <TextView
            android:id="@+id/magazine_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杂志"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:drawableRight="@drawable/arrow_down"
            android:drawablePadding="2dp"/>
    </RelativeLayout>


    <ExpandableListView
        android:id="@+id/magazine_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutAnimation="@anim/list_anim_layout"/>

</LinearLayout>