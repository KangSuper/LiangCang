<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.xiekang.king.liangcang.activity.PayActivity">

    <RelativeLayout
        android:id="@+id/pay_re2"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/colorGirdView">

        <ImageView
            android:id="@+id/pay_back"
            android:layout_alignParentRight="true"
            android:background="@drawable/close"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/pay_brand_name"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/pay_good_name"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pay_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/pay_price"
            android:layout_below="@id/pay_good_name"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBule"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/pay_line"
            android:layout_below="@id/pay_price"
            android:layout_marginTop="20dp"
            android:background="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/pay_type"
            android:layout_below="@id/pay_line"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/pay_radio_group"
            android:layout_below="@id/pay_type"
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/pay_rb1"
                android:background="@drawable/pay"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:button="@null"
                android:textColor="@color/colorWhite"
                android:layout_height="40dp" />
            <RadioButton
                android:layout_marginLeft="10dp"
                android:id="@+id/pay_rb2"
                android:button="@null"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/pay"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_height="40dp" />

        </RadioGroup>
        <TextView
            android:id="@+id/pay_text"
            android:layout_below="@id/pay_radio_group"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:text="数量"/>
        <LinearLayout
            android:id="@+id/pay_count_line"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pay_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/pay_reduce"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:text="－"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorText"/>
            <Button
                android:id="@+id/pay_count"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:text="1"
                android:clickable="false"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorText"/>
            <Button
                android:id="@+id/pay_add"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:text="+"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorText"/>
        </LinearLayout>
        <Button
            android:id="@+id/pay_sure"
            android:background="@color/colorBlue2"
            android:layout_alignParentBottom="true"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:text="确认"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pay_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />
</RelativeLayout>
