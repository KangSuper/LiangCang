<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    tools:context="com.xiekang.king.liangcang.activity.RegisterActivity">

    <EditText
        android:id="@+id/register_country_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:enabled="false"
        android:drawableLeft="@drawable/country_icon"
        android:drawablePadding="20dp"
        android:padding="5dp"
        android:text="中国"
        android:textColor="@color/colorBlank"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/register_country_edit"
        android:layout_marginRight="5dp"
        android:drawablePadding="-15dp"
        android:drawableRight="@drawable/ic_address_modify_arrow"
        android:gravity="center"
        android:text="+86"
        android:textColor="@color/colorBlank" />

    <EditText
        android:id="@+id/register_phone_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_country_edit"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/phone_icon"
        android:hint="手机号"
        android:padding="5dp"
        android:textSize="15dp"
        android:drawablePadding="25dp"
        android:textColorHint="@color/colorGery" />

    <ImageView
        android:layout_alignRight="@id/register_phone_edit"
        android:layout_alignTop="@id/register_phone_edit"
        android:layout_margin="10dp"
        android:src="@drawable/input_cancel_icon"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/register_next_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_phone_edit"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_register_btn"
        android:enabled="false"
        android:text="下一步"
        android:textColor="@color/colorWhite"/>
</RelativeLayout>
