<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.xiekang.king.liangcang.activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/register_relative"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorBlank"
        android:padding="10dp">

        <ImageView
            android:id="@+id/register_back_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ease_mm_title_back" />

        <ImageView
            android:id="@+id/register_close_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_pack_close" />
    </RelativeLayout>

    <EditText
        android:id="@+id/register_country_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_relative"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/country_icon"
        android:drawablePadding="20dp"
        android:enabled="false"
        android:padding="5dp"
        android:text="中国"
        android:textColor="@color/colorBlank"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/register_country_edit"
        android:layout_alignTop="@id/register_country_edit"
        android:layout_marginRight="5dp"
        android:drawablePadding="-15dp"
        android:drawableRight="@drawable/ic_address_modify_arrow"
        android:gravity="center"
        android:text="+86"
        android:textColor="@color/colorBlank" />

    <EditText
        android:id="@+id/register_phone_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_country_edit"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/phone_icon"
        android:drawablePadding="25dp"
        android:hint="手机号"
        android:padding="5dp"
        android:textColor="@color/colorBlank"
        android:textColorHint="@color/colorGery"
        android:textSize="15dp"
        android:maxLength="11"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/register_phone_edit"
        android:layout_alignTop="@id/register_phone_edit"
        android:layout_margin="10dp"
        android:src="@drawable/input_cancel_icon"
        android:visibility="invisible" />

    <Button
        android:id="@+id/register_next_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/register_phone_edit"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_register_btn"
        android:text="下一步"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
